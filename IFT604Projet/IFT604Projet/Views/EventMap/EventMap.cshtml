
@{
    ViewBag.Title = "Event Map";
}
<script type="text/javascript" src="http://maps.googleapis.com/maps/api/js"></script>
<script type="text/javascript">
    function initialize() {
        var mapProp = {
            center: new google.maps.LatLng(45.380291, -71.926995),
            zoom: 15,
            mapTypeId: google.maps.MapTypeId.ROADMAP
        };
        var map = new google.maps.Map(document.getElementById("googleMap"), mapProp);

        var marker1 = new google.maps.Marker({
            position: new google.maps.LatLng(45.380291, -71.926995)
        });

        var marker2 = new google.maps.Marker({
            position: new google.maps.LatLng(45.381370, -71.926730)
        });

        var marker3 = new google.maps.Marker({
            position: new google.maps.LatLng(45.381295, -71.925389)
        });

        var region = new google.maps.Circle({
            center: new google.maps.LatLng(45.379288, -71.927787),
            radius: 500,
            strokeColor: "#FF0000",
            strokeOpacity: 0.8,
            strokeWeight: 2,
            fillColor: "#FF0000",
            fillOpacity: 0.1
        });

        var info1 = new google.maps.InfoWindow({
            content: "Bomb 1 is at these coordinates : <br>" + 45.380291 + ", " + -71.926995
        });
        var info2 = new google.maps.InfoWindow({
            content: "Bomb 2 is at these coordinates : <br>" + 45.381370 + ", " + -71.926730
        });
        var info3 = new google.maps.InfoWindow({
            content: "Bomb 3 is at these coordinates : <br>" + 45.381295 + ", " + -71.925389
        });

        marker1.setMap(map);
        marker2.setMap(map);
        marker3.setMap(map);
        region.setMap(map);

        google.maps.event.addListener(marker1, 'click', function () {
            info1.open(map, marker1);
        });

        google.maps.event.addListener(marker2, 'click', function () {
            info2.open(map, marker2);
        });

        google.maps.event.addListener(marker3, 'click', function () {
            info3.open(map, marker3);
        });
    }
    google.maps.event.addDomListener(window, 'load', initialize);
</script>

<h2>EventMap</h2>

<div id="googleMap" style="width:500px;height:380px">

</div>

